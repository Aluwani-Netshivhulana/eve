<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context=".EnrolFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/enrol_btn"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/purple_700"

            android:text="Capture"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.816" />

        <EditText
            android:id="@+id/fullname_in"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/light_navy"
            android:bottomLeftRadius="45dp"
            android:bottomRightRadius="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="full name"
            android:textColor="#B98294CA"
            android:topLeftRadius="45dp"
            android:topRightRadius="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.354"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/course_in"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/light_navy"
            android:bottomLeftRadius="45dp"
            android:bottomRightRadius="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="course/position"
            android:textColor="#B98294CA"
            android:topLeftRadius="45dp"
            android:topRightRadius="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.589"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/number_in"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/light_navy"
            android:bottomLeftRadius="20dp"
            android:bottomRightRadius="45dp"
            android:ems="10"
            android:inputType="number"
            android:text="student/staff number"
            android:textColor="#B98294CA"
            android:topLeftRadius="45dp"
            android:topRightRadius="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.469" />

        <EditText
            android:id="@+id/year_in"
            android:layout_width="338dp"
            android:layout_height="56dp"
            android:background="@drawable/round_btn"
            android:backgroundTint="@color/light_navy"
            android:bottomLeftRadius="20dp"
            android:bottomRightRadius="45dp"
            android:ems="10"
            android:inputType="number"
            android:text="year of study"
            android:textColor="#B98294CA"
            android:topLeftRadius="45dp"
            android:topRightRadius="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="114dp"
            android:layout_height="113dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="206dp"
            android:layout_height="69dp"
            android:text="Enrol"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>